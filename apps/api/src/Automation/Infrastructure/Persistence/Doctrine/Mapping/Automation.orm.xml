<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Automation\Domain\Model\Automation" table="automations">
        <id name="id" type="string" length="36">
            <generator strategy="NONE"/>
        </id>

        <field name="userId" column="user_id" type="string" length="36"/>
        <field name="name" type="string" length="255"/>
        <field name="type" type="string" length="50"/>
        <field name="status" type="string" length="50"/>
        <field name="symbol" type="string" length="20"/>
        <field name="interval" type="string" length="10" nullable="true"/>
        <field name="dcaConfig" column="dca_config" type="json" nullable="true"/>
        <field name="gridConfig" column="grid_config" type="json" nullable="true"/>
        <field name="parameters" type="json"/>
        <field name="executionCount" column="execution_count" type="integer"/>
        <field name="totalInvested" column="total_invested" type="float"/>
        <field name="totalProfit" column="total_profit" type="float"/>
        <field name="lastExecutedAt" column="last_executed_at" type="datetime_immutable" nullable="true"/>
        <field name="nextExecutionAt" column="next_execution_at" type="datetime_immutable" nullable="true"/>
        <field name="createdAt" column="created_at" type="datetime_immutable"/>
        <field name="updatedAt" column="updated_at" type="datetime_immutable"/>

        <indexes>
            <index name="idx_user_id" columns="user_id"/>
            <index name="idx_status" columns="status"/>
            <index name="idx_type" columns="type"/>
            <index name="idx_next_execution" columns="next_execution_at"/>
        </indexes>
    </entity>
</doctrine-mapping>
